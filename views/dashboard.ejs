<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard - Vulnerability Vigilance</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 p-0">
        <%- include('partials/sidebar') %>
      </div>

      <!-- Main Content -->
      <div class="col-md-10">
        <h1 class="my-4">Dashboard</h1>

        <!-- Single Row for All 4 Widgets -->
        <div class="row g-3">
          <!-- Total Vulnerabilities -->
          <div class="col-lg-3 col-md-6">
            <div class="card text-center h-100">
              <div class="card-body">
                <h5 class="card-title">Total Vulnerabilities</h5>
                <h2 class="display-4"><%= totalVulnerabilities %></h2>
              </div>
            </div>
          </div>

          <!-- Total Products -->
          <div class="col-lg-3 col-md-6">
            <div class="card text-center h-100">
              <div class="card-body">
                <h5 class="card-title">Total Products</h5>
                <h2 class="display-4"><%= totalProducts %></h2>
              </div>
            </div>
          </div>

          <!-- Vulnerability Status Pie Chart -->
          <div class="col-lg-3 col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title text-center">Vulnerability Status</h5>
                <canvas id="statusChart"></canvas>
              </div>
            </div>
          </div>

          <!-- Product Categories Bar Chart -->
          <div class="col-lg-3 col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title text-center">Product Categories</h5>
                <canvas id="categoryChart"></canvas>
              </div>
            </div>
          </div>
        </div>

        <!-- Latest Vulnerabilities Table -->
        <h2 class="my-4">Latest Vulnerabilities</h2>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead class="table-dark">
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Product</th>
                <th>Affected Version</th>
                <th>Severity</th>
                <th>CVSS Score</th>
              </tr>
            </thead>
            <tbody>
              <% latestVulns.forEach(vuln => { %>
                <tr>
                  <td><%= vuln.name %></td>
                  <td><%= vuln.description %></td>
                  <td><%= vuln.product %></td>
                  <td><%= vuln.affectedVersion %></td>
                  <td><%= vuln.severity %></td>
                  <td><%= vuln.cvssScore %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Chart JS Scripts -->
  <script>
    // ---------- VULNERABILITY STATUS PIE CHART ----------
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    const statusLabels = [<% statusCounts.forEach(function(s, index) { %>
      "<%= s._id %>"<% if(index !== statusCounts.length - 1){ %>, <% } %>
    <% }); %>];
    const statusData = [<% statusCounts.forEach(function(s, index) { %>
      <%= s.count %><% if(index !== statusCounts.length - 1){ %>, <% } %>
    <% }); %>];

    new Chart(statusCtx, {
      type: 'pie',
      data: {
        labels: statusLabels,
        datasets: [{
          label: 'Vulnerability Status',
          data: statusData,
          backgroundColor: [
            'rgba(255, 99, 132, 0.6)',  // e.g. open
            'rgba(75, 192, 192, 0.6)',  // e.g. closed
            'rgba(255, 206, 86, 0.6)'   // e.g. ignored
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(255, 206, 86, 1)'
          ],
          borderWidth: 1
        }]
      }
    });

    // ---------- PRODUCT CATEGORIES BAR CHART ----------
    // Sort categories from most to least
    const sortedCategories = <%= JSON.stringify(categoryCounts) %>.sort((a, b) => b.count - a.count);
    const categoryLabels = sortedCategories.map(item => item._id);
    const categoryData = sortedCategories.map(item => item.count);

    // Generate a color array for each category
    const colorPalette = [
      '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
      '#FF9F40', '#FFCD56', '#C9CBCF', '#E7E9ED'
    ];
    const backgroundColors = categoryLabels.map((_, i) => colorPalette[i % colorPalette.length]);

    const categoryCtx = document.getElementById('categoryChart').getContext('2d');
    new Chart(categoryCtx, {
      type: 'bar',
      data: {
        labels: categoryLabels,
        datasets: [{
          label: 'Products',
          data: categoryData,
          backgroundColor: backgroundColors,
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>

  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
