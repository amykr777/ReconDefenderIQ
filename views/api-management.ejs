<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>API Management - ReconDefenderIQ</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-auto p-0">
        <%- include('partials/sidebar') %>
      </div>
      <!-- Main Content -->
      <div class="col p-3">
        <h1 class="mb-4">API Management</h1>
        
        <!-- NVD API Key Section -->
        <div class="card mb-4">
          <div class="card-header">NVD API Key</div>
          <div class="card-body">
            <form action="/api-management/update-nvd" method="POST">
              <div class="mb-3">
                <label for="nvdApiKey" class="form-label">Enter NVD API Key:</label>
                <input type="text" id="nvdApiKey" name="apiKey" class="form-control" value="<%= nvdApiKey ? nvdApiKey.apiKey : '' %>">
              </div>
              <button type="submit" class="btn btn-primary">Save</button>
            </form>
          </div>
        </div>
        
        <!-- Other API Keys List -->
        <h2>Other API Keys</h2>
        <ul class="list-group">
          <% apiKeys.forEach(api => { %>
            <% if (api.apiName !== 'NVD') { %>
              <li class="list-group-item">
                <strong><%= api.apiName %>:</strong> <%= api.apiKey %>
              </li>
            <% } %>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
