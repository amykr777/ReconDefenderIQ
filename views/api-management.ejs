<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>API Management - ReconDefenderIQ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 p-0">
        <%- include('partials/sidebar') %>
      </div>
      <!-- Main Content -->
      <div class="col-md-10">
        <h1 class="my-4">API Management</h1>
        <div class="card mb-4">
          <div class="card-body">
            <form action="/api-management/add" method="POST" class="row g-3">
              <div class="col-md-6">
                <input type="text" name="apiName" class="form-control" placeholder="API Name" required>
              </div>
              <div class="col-md-6">
                <input type="text" name="apiKey" class="form-control" placeholder="API Key" required>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary">Add API Key</button>
              </div>
            </form>
          </div>
        </div>
        <h2 class="my-4">API Keys List</h2>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead class="table-dark">
              <tr>
                <th>API Name</th>
                <th>API Key</th>
                <th>Added On</th>
              </tr>
            </thead>
            <tbody>
              <% apiKeys.forEach(api => { %>
                <tr>
                  <td><%= api.apiName %></td>
                  <td><%= api.apiKey %></td>
                  <td><%= api.createdAt.toLocaleString() %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
